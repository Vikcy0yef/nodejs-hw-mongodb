                          "type": "string",
                          "example": "Іван Петренко"
                        },
                        "phoneNumber": {
                          "type": "string",
                          "example": "+380931231231"
                        },
                        "email": {
                          "type": "string",
                          "example": "ivan@example.com"
                        },
                        "isFavourite": {
                          "type": "boolean",
                          "example": false
                        },
                        "contactType": {
                          "type": "string",
                          "example": "personal"
