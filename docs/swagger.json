{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Contacts API",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "API для роботи з контактами (CRUD) з авторизацією та фото"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://твій-деплой.onrender.com"
    }
  ],
  "tags": [
    {
      "name": "Contacts",
      "description": "Операції з контактами"
    }
  ],
  "paths": {
    "/contacts": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Отримати список контактів",
        "operationId": "getContacts",
        "description": "Отримує масив усіх контактів, з можливістю фільтрації за параметрами.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "favorite",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean"
            },
            "description": "Якщо true — повертати лише обрані контакти"
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer"
            },
            "description": "Номер сторінки для пагінації"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer"
            },
            "description": "Кількість елементів на сторінці"
          }
        ],
        "responses": {
          "200": {
            "description": "Список контактів успішно отримано"
          },
          "401": {
            "description": "Неавторизований доступ"
          }
        }
      },
      "post": {
        "tags": [
          "Contacts"
        ],
        "summary": "Створити новий контакт",
        "operationId": "createContact",
        "description": "Додає новий контакт до вашої колекції.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "phoneNumber": {
                    "type": "string"
                  },
                  "contactType": {
                    "type": "string"
                  },
                  "isFavourite": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "name",
                  "email",
                  "phoneNumber"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Контакт успішно створено"
          },
          "400": {
            "description": "Помилка валідації даних"
          },
          "401": {
            "description": "Неавторизований доступ"
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Отримати контакт за ID",
        "operationId": "getContactById",
        "description": "Отримує детальну інформацію про контакт за його унікальним ідентифікатором.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Ідентифікатор контакту, який потрібно отримати"
          }
        ],
        "responses": {
          "200": {
            "description": "Контакт успішно знайдено"
          },
          "404": {
            "description": "Контакт не знайдено"
          }
        }
      },
      "patch": {
        "tags": [
          "Contacts"
        ],
        "summary": "Оновити контакт",
        "operationId": "updateContact",
        "description": "Оновлює дані існуючого контакту.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Ідентифікатор контакту"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "phoneNumber": {
                    "type": "string"
                  },
                  "contactType": {
                    "type": "string"
                  },
                  "isFavourite": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Контакт успішно оновлено"
          },
          "400": {
            "description": "Помилка валідації даних"
          },
          "401": {
            "description": "Неавторизований доступ"
          },
          "404": {
            "description": "Контакт не знайдено"
          }
        }
      },
      "delete": {
        "tags": [
          "Contacts"
        ],
        "summary": "Видалити контакт",
        "operationId": "deleteContact",
        "description": "Видаляє контакт за його унікальним ідентифікатором.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Ідентифікатор контакту"
          }
        ],
        "responses": {
          "200": {
            "description": "Контакт успішно видалено"
          },
          "401": {
            "description": "Неавторизований доступ"
          },
          "404": {
            "description": "Контакт не знайдено"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}